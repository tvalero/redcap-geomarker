{
	"name": "Geomarker",

	"namespace": "UIOWA\\Geomarker",

	"description": "Generates a Google map with marker and info window using geolocation data from specified fields in a REDCap project",

	"documentation": "README.md",

	"authors": [
		{
			"name": "Izzy Neuhaus",
			"email": "isabelle-neuhaus@uiowa.edu",
			"institution": "University of Iowa"
		},
		{
			"name": "Fred McClurg",
			"email": "",
			"institution": "University of Iowa"
		}
	],

	"permissions": [

	],
	
	"enable-every-page-hooks-on-system-pages": false,	

	"links": {
		"project": [
			{
				"name": "Geomarker",
				"icon": "pin",
				"url": "index.php"
			}
		],
		"control-center": [

		]
	},

	"no-auth-pages": [

	],

	"project-settings": [
		{
			"key": "google-maps-api-key",
			"name": "Google Maps v3 API Key",
			"type": "text",
			"required": true
		},
		{
			"key": "lat-field",
			"name": "Latitude Field",
			"type": "field-list",
			"required": true
		},
		{
			"key": "lng-field",
			"name": "Longitude Field",
			"type": "field-list",
			"required": true
		},
		{
			"key": "map-type",
			"name": "Type of Map",
			"type": "radio",
			"choices": [
				{
					"name": "Roadmap",
					"value": "roadmap"
				},
				{
					"name": "Satellite",
					"value": "satellite"
				},
				{
					"name": "Hybrid (Satellite + Roads)",
					"value": "hybrid"
				},
				{
					"name": "Terrain",
					"value": "terrain"
				}
			],
			"required": true,
			"default": "roadmap"
		},
		{
			"key": "hover-field",
			"name": "Hover Text Field",
			"type": "field-list",
			"required": false
		}
	],

	"system-settings": [

	],

	"crons": [

	],

	"compatibility": {
		"php-version-min": "",
		"php-version-max": "",
		"redcap-version-min": "",
		"redcap-version-max": ""
	}
}